{
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
    },
    "eslint.validate": [
        "vue",
        "html",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "path-autocomplete.extensionOnImport": true,
    "path-autocomplete.pathMappings": {
        "@": "${folder}/src",
       "view": "${folder}/src/view"
    },
    "i18n-ally.localesPaths": [
        "src/locale",
        "src/locale/lang"
    ],
    "cSpell.words": [
        "aqara",
        "popconfirm"
    ]
}